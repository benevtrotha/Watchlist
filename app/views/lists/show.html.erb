<div class="container">
<h1><%= @list.name %></h1>
<p></p>
<strong><% @list.bookmarks.each do |bookmark| %>
  <%= bookmark.movie.title %></h5></strong>
  <p></p>
  <%= bookmark.movie.overview %></p>
  <p>---------------------</p>
  <p><em><%= "'#{bookmark.comment}'" %></em></p>
  <p><strong><%= "Rating: #{bookmark.movie.rating}" %></strong></p>
<%= link_to "Delete movie", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
<p>
<%= link_to "Add a movie", new_list_bookmark_path(@list) %>
</p>
<%= link_to "Back to all Lists", lists_path %>
</div>
